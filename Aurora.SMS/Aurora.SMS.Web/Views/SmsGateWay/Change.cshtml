 @model  Aurora.SMS.Web.Models.SmsGateWayViewModel
<div class="well well-lg">
    <h2>Manage Sms Gateways</h2>
    <p>Here you can configure your preferable Sms gateway</p>
</div>
<ul class="nav nav-pills nav-stacked col-md-3">
    @foreach (var smsGateWay in Model.SmsGateWayList)
    {
        <li><a href="#@smsGateWay.Name" data-toggle="tab" aria-expanded="true">@smsGateWay.Name <span class="label label-default small">Default</span></a></li>
    }
</ul>

<div id="myTabContent" class="tab-content col-md-9">
    @for (int i = 0; i < Model.SmsGateWayList.Count(); i++)
    {
        var smsGateWay = Model.SmsGateWayList[i];
        <div class="tab-pane fade" id="@smsGateWay.Name">
            <div class="panel panel-default">
                <div class="panel-heading">@smsGateWay.Name</div>
                @using (Html.BeginForm())
                {
                    <fieldset class="panel-body">
                        <img alt="@smsGateWay.LogoUrl" src="@smsGateWay.LogoUrl" />
                        <div class="form-group">
                            <label class="col-md-2 control-label form-inline">User Name</label>
                            <div class="col-md-10">
                                @Html.EditorFor(p => smsGateWay.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label form-inline">Password</label>
                            <div class="col-md-10">
                                @Html.EditorFor(p => smsGateWay.PassWord)
                            </div>
                        </div>
                    </fieldset>
                    <div class="panel-footer clearfix">
                                <input type="hidden" name="Index" value="@i" />
                                @Html.ActionLink("Set Default", "SetDeafult", null, new { @class = "btn btn-default btn-sm"})
                                @Html.ActionLink("Test", "Test", null, new { @class = "btn btn-success  btn-sm" })
                                @Html.ActionLink("Save", "Save", null, new { @class = "btn btn-primary  btn-sm pull-right" })
                    </div>
                }
            </div>
            </div>
    }
</div>

